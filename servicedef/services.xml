<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
  <description>Clojure-REPL Service</description>
  <vendor>https://netdava.com</vendor>
  <version>1.0</version>

  <service name="startRepl" engine="java"
    location="com.netdava.ofbiz.clojure.ClojureREPLService" invoke="startRepl" export="true"
    max-retry="3" use-transaction="false">
    <description>
      Clojure repl service. Starts the repl to listen to a port
    </description>
  </service>

  <service name="stopRepl" engine="java"
    location="com.netdava.ofbiz.clojure.ClojureREPLService" invoke="stopRepl" export="true"
    max-retry="3" use-transaction="false">
    <description>
      Clojure repl service. Controls the repl stops the repl.
    </description>
  </service>

  <service name="statusRepl" engine="java"
    location="com.netdava.ofbiz.clojure.ClojureREPLService" invoke="statusRepl" export="true"
    max-retry="3" use-transaction="false">
    <description>
      Clojure repl service. Get service stats.
    </description>
    <attribute name="status" type="java.util.Map" mode="OUT"/>
  </service>

  <service name="com.netdava.ofbiz.clojure.sample/clojure-test-service" engine="clojure"
           location="com.netdava.ofbiz.clojure.sample" invoke="clojure-test-service" export="true"
           max-retry="3" use-transaction="false">
    <description>
      Clojure repl service. Get service stats.
    </description>
    <attribute name="status" type="java.util.Map" mode="OUT"/>
  </service>

</services>